# Ignore Drupal core
web/core/

# Ignore contributed modules and themes
web/modules/contrib/
web/themes/contrib/

# Ignore vendor
vendor/

# Ignore files directories
web/sites/*/files/
web/sites/*/private/

# Allow tracking of default site's settings.php and placeholder files
!web/sites/default/settings.php
!web/sites/default/files/.gitkeep
!web/sites/default/files/README.md

# Ignore sensitive configuration (but allow default site settings.php)
web/sites/*/settings.local.php
web/sites/*/services.yml
web/sites/*/services.local.yml
# Ignore settings.php for all sites except default
web/sites/*/settings.php
!web/sites/default/settings.php

# Ignore development files
.ddev/db_snapshots/
.ddev/import-db/
.ddev/tmp/
*.log
.DS_Store
Thumbs.db

# Ignore composer packages and Drupal files
web/modules/README.txt
web/profiles/README.txt
web/themes/README.txt
web/INSTALL.txt
web/example.gitignore
web/robots.txt
web/update.php
web/.csslintrc
web/.eslintignore
web/.eslintrc.json
web/.ht.router.php
web/.htaccess
web/autoload.php
web/index.php

# Ignore backup files
*.bak
*.tmp
*.swp
*~
*.sql.gz

# Ignore IDE files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# Ignore OS files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore temporary reference files
temp_reference/

# Keep database dump for sharing
!fossee_database.sql
